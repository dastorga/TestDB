<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView123435"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_telefono_whatsapp"
            android:text="Recuerda incluir codigo pais y codigo de area." />


        <EditText
            android:id="@+id/editText_telefono_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_enviar_whatsapp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btn_enviar_whatsapp"
            android:ems="10"
            android:hint="Ingresa numero de telefono"
            android:inputType="phone" />

        <Button
            android:id="@+id/btn_enviar_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView123435"
            android:layout_marginTop="16dp"
            android:text="Enviar"
            android:textSize="36sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_volver_inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver al Inicio"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="178dp"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>