<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnAceptarWarningNotice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/match_parent_relative"
            android:layout_below="@+id/txtViewWarningNotice"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="139dp"
            android:background="@android:color/holo_red_light"
            android:elevation="10dp"
            android:text="ACEPTAR"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="392dp" />

        <TextView
            android:id="@+id/txtViewWarningNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:text="Seguro desea eliminar el Grafo?"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="@dimen/text_size_relative_40sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="219dp"
            tools:text="Seguro desea eliminar el Grafo?" />

        <Button
            android:id="@+id/btnCancelarWarningNotice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/match_parent_relative"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btnAceptarWarningNotice"
            android:layout_marginTop="71dp"
            android:background="@color/colorPrimary"
            android:elevation="10dp"
            android:text="CANCELAR"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="647dp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>