<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dario.testsdb.CrearNodeEnlaceActivity">


    <RelativeLayout
        android:id="@+id/idCrearNodeEnlaceActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="16dp">

        <Button
            android:id="@+id/btnCrearNode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_button_80"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:text="CREAR NODO"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="77dp" />

        <Button
            android:id="@+id/btnCrearEnlace"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_button_80"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnCrearNode"
            android:layout_marginTop="27dp"
            android:elevation="10dp"
            android:text="CREAR ARCO"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,MissingConstraints"
            tools:layout_editor_absoluteX="-24dp"
            tools:layout_editor_absoluteY="378dp" />

        <Button
            android:id="@+id/btnVolverAtrasCrearNodeEnlaceActivity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_button_80"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnCrearEnlace"
            android:layout_marginTop="21dp"
            android:elevation="10dp"
            android:text="Volver Atras"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
