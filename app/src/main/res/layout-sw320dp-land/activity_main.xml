<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dario.testsdb.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <RelativeLayout
        android:id="@+id/relativeLayout9"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_height_relative"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnCrear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient_box_green"
            android:elevation="10dp"
            android:text="Crear"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_button"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnEditar"
            android:layout_marginTop="7dp"
            android:background="@drawable/gradient_box_red"
            android:elevation="10dp"
            android:text="Eliminar"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_button"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnCrear"
            android:layout_marginTop="7dp"
            android:background="@drawable/gradient_box_blue"
            android:elevation="10dp"
            android:text="Editar"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnReproducir"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_button"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnEliminar"
            android:layout_marginTop="9dp"
            android:background="@drawable/gradient_box_purple"
            android:elevation="10dp"
            android:text="Reproducir"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnExportar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_button"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnReproducir"
            android:layout_marginTop="8dp"
            android:background="@drawable/gradient_box_yellow"
            android:elevation="10dp"
            android:text="EXPORTAR"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
