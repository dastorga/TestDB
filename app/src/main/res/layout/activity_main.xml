<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dario.testsdb.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="572dp"
        android:layout_height="794dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="16dp">

        <Button
            android:id="@+id/btnCrear"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:background="@android:color/holo_green_dark"
            android:elevation="0dp"
            android:text="Crear"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_above="@+id/btnReproducir"
            android:layout_alignStart="@+id/btnReproducir"
            android:layout_marginBottom="31dp"
            android:background="@android:color/holo_orange_dark"
            android:text="Eliminar"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/btnCrear"
            android:layout_below="@+id/btnCrear"
            android:layout_marginTop="41dp"
            android:background="@android:color/holo_blue_light"
            android:text="Editar"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnReproducir"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnEditar"
            android:layout_marginBottom="54dp"
            android:background="@android:color/holo_purple"
            android:text="Reproducir"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
