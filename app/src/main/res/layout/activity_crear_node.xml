<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dario.testsdb.CrearNodeActivity">

    <RelativeLayout
        android:layout_width="585dp"
        android:layout_height="810dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnGuardar_CrearNode"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_alignStart="@+id/btnVolverAtras_CrearNode"
            android:layout_below="@+id/etNombreNode_CrearNode"
            android:layout_marginTop="73dp"
            android:text="Guardar"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnVolverAtras_CrearNode"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="84dp"
            android:text="Volver Atras"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etNombreNode_CrearNode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="Ingresar Nombre de Nodo"
            android:inputType="textPersonName"
            tools:ignore="HardcodedText" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
